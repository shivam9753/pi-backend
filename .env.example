# Database Configuration
ATLAS_URL=mongodb+srv://username:password@cluster.mongodb.net/poemsindiadb?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URLs (comma-separated) - IMPORTANT: Include both www and non-www domains for production
FRONTEND_URLS=http://localhost:4200,http://127.0.0.1:4200

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS S3 Settings
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your-s3-bucket-name

STORAGE_TYPE=s3

# CloudFront domain (optional)
CLOUDFRONT_DOMAIN=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=public/uploads

# Email Configuration (optional)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Redis Configuration (optional for caching)
# REDIS_URL=redis://localhost:6379